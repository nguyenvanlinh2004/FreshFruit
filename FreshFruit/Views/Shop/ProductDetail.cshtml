<style>
    .carousel-indicators {
        position: static;
        display: flex;
        justify-content: center;
        margin-top: 16px;
        padding-left: 0;
    }

        .carousel-indicators li {
            width: 70px;
            height: 70px;
            margin: 0 6px;
            border: none;
            cursor: pointer;
            border-radius: 8px;
            background-color: transparent !important; 
            list-style: none;
            display: flex;
            align-items: center;
            justify-content: center;
        }

    .thumb-wrapper {
        width: 100%;
        height: 100%;
        padding: 3px;
        background: #fff;
        border: 2px solid transparent;
        border-radius: 8px;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: border-color 0.2s ease, box-shadow 0.2s ease;
    }

        .thumb-wrapper img {
            max-width: 100%;
            max-height: 100%;
            object-fit: cover;
            border-radius: 5px;
            display: block;
        }

    /* Active thumbnail */
    .carousel-indicators li.active .thumb-wrapper {
        border-color: #7BBE1A;
        box-shadow: 0 0 5px rgba(0, 0, 0, 0.15);
    }

    .main-img-wrapper {
        width: 100%;
        height: 400px;
        display: flex;
        justify-content: center;
        align-items: center;
        overflow: hidden;
        border-radius: 10px;
        background-color: #f9f9f9;
    }

        .main-img-wrapper img {
            max-height: 100%;
            max-width: 100%;
            object-fit: contain;
        }

    .carousel-indicators {
        background-color: transparent !important;
    }

        .carousel-indicators li {
            background-color: transparent !important;
        }

            .carousel-indicators li .thumb-wrapper {
                background-color: #ffffff !important;
            }
</style>

