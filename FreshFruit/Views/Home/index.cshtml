@await Html.PartialAsync("_Slider")    <!-- Start Categories  -->
@using FreshFruit.Models

@{
    var allProducts = ViewBag.AllProducts as List<Product>;
    var topRated = ViewBag.TopRated as List<Product>;
    var topSelling = ViewBag.TopSelling as List<Product>;
}
<div class="categories-shop">
    <div class="container">
        <div class="row">
            @foreach (var product in ViewBag.AllProducts)
            {
                <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
                    <div class="shop-cat-box">
                        <img class="img-fluid" src="~/images/@product.Image" alt="@product.Name" />
                        <a class="btn hvr-hover" href="#">@product.Name</a>
                        <p>Giá: @String.Format("{0:N0}₫", product.Price)</p>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<!-- End Categories -->

<div class="box-add-products">
    <div class="container">
        <div class="row">
            @foreach (var product in ViewBag.TopSelling)
            {
                <div class="col-lg-4 col-md-6 col-sm-12">
                    <div class="offer-box-products text-center">
                        <img class="img-fluid" src="~/images/@product.Image" alt="@product.Name" />
                        <h5 class="mt-2">@product.Name</h5>
                        <p class="text-danger fw-bold">Giá: @String.Format("{0:N0}₫", product.Price)</p>
                        <a href="#" class="btn btn-primary btn-sm">Xem chi tiết</a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<div class="box-add-products">
    <div class="container">
        <div class="row">
            @foreach (var product in ViewBag.TopRated)
            {
                <div class="col-lg-4 col-md-6 col-sm-12">
                    <div class="offer-box-products text-center">
                        <img class="img-fluid" src="~/images/@product.Image" alt="@product.Name" />
                        <h5 class="mt-2">@product.Name</h5>
                        <p class="text-danger fw-bold">Giá: @String.Format("{0:N0}₫", product.Price)</p>
                        <a href="#" class="btn btn-primary btn-sm">Xem chi tiết</a>
                    </div>
                </div>
            }
        </div>
    </div>

<!-- Start Products  -->
<div class="products-box">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="title-all text-center">
                    <h1>Fruits & Vegetables</h1>
                    <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed sit amet lacus enim.</p>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="special-menu text-center">
                    <div class="button-group filter-button-group">
                        <button class="active" data-filter="*">All</button>
                        <button data-filter=".top-featured">Top featured</button>
                        <button data-filter=".best-seller">Best seller</button>
                    </div>
                </div>
            </div>
        </div>

        
        <h2>Tất cả sản phẩm</h2>
        <ul>
            @foreach (var product in allProducts!)
            {
                <li>@product.Name - Giá: @product.Price</li>
            }
        </ul>

        <h2>Top 3 sản phẩm được đánh giá nhiều nhất</h2>
        <ul>
            @foreach (var product in topRated!)
            {
                <li>@product.Name - Số lượt đánh giá: @product.Ratings.Count</li>
            }
        </ul>

        <h2>Top 3 sản phẩm bán chạy nhất</h2>
        <ul>
            @foreach (var product in topSelling!)
            {
                <li>@product.Name</li>
            }
        </ul>
    </div>
</div>
<!-- End Products  -->
