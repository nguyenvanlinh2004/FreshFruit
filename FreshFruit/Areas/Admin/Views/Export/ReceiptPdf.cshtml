@model FreshFruit.Models.PurchaseReceipt
@{
    Layout = null;
    var company = ViewBag.CompanyInfo as FreshFruit.Models.CompanyInfo;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Phiếu nhập hàng</title>
    <style>
        body {
            font-family: 'Segoe UI', sans-serif;
            font-size: 12px;
            margin: 40px;
            color: #333;
        }

        .header {
            text-align: center;
            margin-bottom: 15px;
        }

            .header h1 {
                color: #1d4ed8;
                font-size: 20px;
                margin: 0;
            }

        .receipt-info {
            margin-bottom: 15px;
            font-size: 12px;
        }

            .receipt-info p {
                margin: 2px 0;
            }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 10px;
            font-size: 11px;
        }

        th, td {
            border: 1px solid #ddd;
            padding: 6px 8px;
            text-align: center;
        }

        th {
            background-color: #e0f2fe;
            color: #1e3a8a;
        }

        .total {
            margin-top: 10px;
            text-align: right;
            font-weight: bold;
            font-size: 13px;
        }

        .footer {
            margin-top: 30px;
            border-top: 1px solid #ccc;
            padding-top: 15px;
            font-size: 11px;
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(120px, 1fr));
            text-align: center;
            gap: 10px;
        }

            .footer div {
                word-break: break-word;
            }

        .note {
            margin-top: 20px;
            font-style: italic;
            font-size: 10px;
            text-align: center;
        }
    </style>
</head>
<body>

    <div class="header">
        <h1>PHIẾU NHẬP HÀNG</h1>
    </div>

    <div class="receipt-info">
        <p><strong>Mã lô hàng:</strong> @Model.ShipmentId</p>
        <p><strong>Ngày nhập:</strong> @Model.ReceiptDate?.ToString("dd/MM/yyyy")</p>
        <p><strong>Người tạo:</strong> @Model.CreateByNavigation?.Email</p>
        <p><strong>Nhà cung cấp:</strong> @Model.Supplier</p>
    </div>

    <table>
        <thead>
            <tr>
                <th>Sản phẩm</th>
                <th>Số lượng</th>
                <th>Giá nhập</th>
                <th>Hạn sử dụng</th>
                <th>Thành tiền</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var detail in Model.PurchaseReceiptDetails)
            {
                <tr>
                    <td>@detail.Product.Name</td>
                    <td>@detail.Quantity</td>
                    <td>@String.Format("{0:N0}", detail.ImportPrice)</td>
                    <td>@detail.ExpiryDate?.ToString("dd/MM/yyyy")</td>
                    <td>@String.Format("{0:N0}", detail.Total)</td>
                </tr>
            }
        </tbody>
    </table>

    <div class="total">
        Tổng cộng: @String.Format("{0:N0} ₫", Model.Total)
    </div>

    @if (company != null)
    {
        <div class="footer">
            <div><strong>@company.CompanyName</strong></div>
            @if (!string.IsNullOrEmpty(company.Address))
            {
                <div>@company.Address</div>
            }
            @if (!string.IsNullOrEmpty(company.Phone))
            {
                <div>Tel: @company.Phone</div>
            }
            @if (!string.IsNullOrEmpty(company.Email))
            {
                <div>@company.Email</div>
            }
            @if (!string.IsNullOrEmpty(company.Website))
            {
                <div>@company.Website</div>
            }
        </div>
    }

    <div class="note">
        Phiếu nhập được tạo từ hệ thống quản lý FreshFruit.
    </div>
</body>
</html>
