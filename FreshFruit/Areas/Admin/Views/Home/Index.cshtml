@model FreshFruit.Models.ViewModel.ProductStatisticsPageViewModel

<!-- Thêm Font Awesome -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet" />

<div class="page-wrapper">
    <div class="content">

        <!-- Tiêu đề Dashboard -->
        <div class="dashboard-header text-center mb-5">
            <i class="fas fa-tachometer-alt dashboard-icon"></i>
            <h1 class="dashboard-title">Dashboard</h1>
        </div>

        <!-- Hiển thị tổng số liệu -->
        <div class="row text-center mb-5">
            <div class="col-md-4 summary-card">
                <div class="summary-value">@Model.TotalMembers</div>
                <div class="summary-label">Tổng Thành Viên</div>
            </div>
            <div class="col-md-4 summary-card">
                <div class="summary-value">@Model.TotalPurchaseReceipts</div>
                <div class="summary-label">Tổng Phiếu Nhập Hàng</div>
            </div>
            <div class="col-md-4 summary-card">
                <div class="summary-value">@Model.TotalInvoices</div>
                <div class="summary-label">Tổng Đơn Hàng</div>
            </div>
        </div>

        <!-- Top sản phẩm bán chạy -->
        <h2 class="section-title">Top 3 Sản Phẩm Bán Chạy Nhất</h2>
        @if (Model?.TopProducts?.Any() == true)
        {
            <div class="table-responsive mb-5">
                <table class="table table-bordered text-center">
                    <thead class="table-success">
                        <tr>
                            <th>Tên Sản Phẩm</th>
                            <th>Tổng Số Lượng Đã Bán</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.TopProducts)
                        {
                            <tr>
                                <td>@item.ProductName</td>
                                <td>@item.TotalQuantitySold</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <p class="text-muted">Không có sản phẩm bán chạy.</p>
        }

        <!-- Top sản phẩm bán ít -->
        <h2 class="section-title">Top 3 Sản Phẩm Bán Ít Nhất</h2>
        @if (Model?.BottomProducts?.Any() == true)
        {
            <div class="table-responsive mb-5">
                <table class="table table-bordered text-center">
                    <thead class="table-danger">
                        <tr>
                            <th>Tên Sản Phẩm</th>
                            <th>Tổng Số Lượng Đã Bán</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.BottomProducts)
                        {
                            <tr>
                                <td>@item.ProductName</td>
                                <td>@item.TotalQuantitySold</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <p class="text-muted">Không có sản phẩm bán ít.</p>
        }

        <!-- Biểu đồ doanh thu -->
        <h2 class="section-title">Thống Kê Doanh Thu</h2>

        <div class="row justify-content-center">
            <div class="col-md-5 text-center mb-4 chart-container">
                <div class="chart-card">
                    <div class="chart-title">Doanh Thu Theo Tháng</div>
                    <canvas id="monthlyRevenueChart" width="300" height="200"></canvas>
                </div>
            </div>

            <div class="col-md-5 text-center mb-4 chart-container">
                <div class="chart-card">
                    <div class="chart-title">Doanh Thu Theo Quý</div>
                    <canvas id="quarterlyRevenueChart" width="300" height="200"></canvas>
                </div>
            </div>
        </div>

    </div>
</div>

<style>
    .dashboard-header {
        display: flex;
        justify-content: center;
        align-items: center;
        margin-bottom: 40px;
        animation: fadeInDown 1s ease;
    }

    .dashboard-icon {
        font-size: 40px;
        color: #4CAF50;
        margin-right: 15px;
    }

    .dashboard-title {
        font-size: 36px;
        font-weight: bold;
        color: #333;
    }

    .section-title {
        text-align: center;
        font-size: 28px;
        font-weight: bold;
        color: #4CAF50;
        margin-bottom: 30px;
        animation: fadeInDown 1s ease;
        border-bottom: 3px solid #4CAF50;
        display: inline-block;
        padding-bottom: 8px;
    }

    .chart-container {
        display: flex;
        justify-content: center;
    }

    .chart-card {
        border: 1px solid #ddd;
        border-radius: 10px;
        padding: 15px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        width: 100%;
        max-width: 350px;
    }

    .chart-title {
        font-size: 18px;
        font-weight: 600;
        margin-bottom: 15px;
        color: #333;
        text-align: center;
        transition: color 0.3s ease;
    }

        .chart-title:hover {
            color: #4CAF50;
        }

    .summary-card {
        border-radius: 12px;
        padding: 25px;
        margin-bottom: 20px;
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.2);
        color: #fff;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        cursor: pointer;
    }

        /* Card màu riêng */
        .summary-card:nth-child(1) {
            background: linear-gradient(135deg, #1abc9c, #16a085);
        }

        .summary-card:nth-child(2) {
            background: linear-gradient(135deg, #3498db, #2980b9);
        }

        .summary-card:nth-child(3) {
            background: linear-gradient(135deg, #e67e22, #d35400);
        }

        .summary-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.3);
        }

    .summary-value {
        font-size: 36px;
        font-weight: bold;
    }

    .summary-label {
        font-size: 18px;
        margin-top: 8px;
    }

    table th, table td {
        vertical-align: middle !important;
    }

    .table-responsive {
        margin-bottom: 40px;
    }
</style>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<script>
    window.onload = function () {

        // Doanh thu theo tháng
        var monthlyLabels = @Html.Raw(Json.Serialize(Model.MonthlyRevenue.Select(r => r.Label)));
        var monthlyData = @Html.Raw(Json.Serialize(Model.MonthlyRevenue.Select(r => r.TotalRevenue)));

        var monthlyCtx = document.getElementById('monthlyRevenueChart').getContext('2d');
        new Chart(monthlyCtx, {
            type: 'bar',
            data: {
                labels: monthlyLabels,
                datasets: [{
                    label: 'Doanh thu theo tháng',
                    data: monthlyData,
                    backgroundColor: 'rgba(153, 102, 255, 0.6)',
                    barPercentage: 0.4,
                    categoryPercentage: 0.4
                }]
            },
            options: {
                responsive: false,
                plugins: { legend: { display: false } },
                scales: {
                    x: { ticks: { autoSkip: true, maxTicksLimit: 6 } }
                }
            }
        });

        // Doanh thu theo quý
        var quarterlyLabels = @Html.Raw(Json.Serialize(Model.QuarterlyRevenue.Select(r => r.Label)));
        var quarterlyData = @Html.Raw(Json.Serialize(Model.QuarterlyRevenue.Select(r => r.TotalRevenue)));

        var quarterlyCtx = document.getElementById('quarterlyRevenueChart').getContext('2d');
        new Chart(quarterlyCtx, {
            type: 'bar',
            data: {
                labels: quarterlyLabels,
                datasets: [{
                    label: 'Doanh thu theo quý',
                    data: quarterlyData,
                    backgroundColor: 'rgba(255, 159, 64, 0.6)',
                    barPercentage: 0.4,
                    categoryPercentage: 0.4
                }]
            },
            options: {
                responsive: false,
                plugins: { legend: { display: false } },
                scales: {
                    x: { ticks: { autoSkip: true, maxTicksLimit: 6 } }
                }
            }
        });
    };
</script>
