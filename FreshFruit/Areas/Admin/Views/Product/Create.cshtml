@model FreshFruit.Models.ViewModel.ProductCreateVM
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="page-wrapper">
        <div class="content">
            <div class="page-header">
                <div class="page-title">
                    <h4>Product Add</h4>
                    <h6>Create new product</h6>
                </div>
            </div>
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <!-- Product Name -->
                        <div class="col-lg-3 col-sm-6 col-12">
                            <div class="form-group">
                                <label asp-for="Name"></label>
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Category -->
                        <div class="col-lg-3 col-sm-6 col-12">
                            <div class="form-group">
                                <label asp-for="CategoryId">Category</label>
                                @Html.DropDownListFor(model => model.CategoryId, new SelectList(ViewBag.Categories, "Id", "Name"), "-- Choose Category --", new { @class = "form-control" })
                                <option value=""></option>
                                </select>
                                <span asp-validation-for="CategoryId" class="text-danger"></span>
                            </div>
                        </div>
                        <!-- Price -->
                        <div class="col-lg-3 col-sm-6 col-12">
                            <div class="form-group">
                                <label asp-for="Price"></label>
                                <input asp-for="Price" class="form-control" />
                                <span asp-validation-for="Price" class="text-danger"></span>
                            </div>
                        </div>
                        <!-- Description -->
                        <div class="col-lg-12">
                            <div class="form-group">
                                <label asp-for="Description"></label>
                                <textarea asp-for="Description" class="form-control"></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <div class="form-group">
                                <label asp-for="LongDescription"></label>
                                <textarea asp-for="LongDescription" class="form-control"></textarea>
                                <span asp-validation-for="LongDescription" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Main Product Image -->
                        <div class="col-lg-6 col-sm-6 col-12">
                            <div class="form-group">
                                <label asp-for="ImageFile">Main Product Image</label>
                                <input asp-for="ImageFile" type="file" class="form-control" />
                                <span asp-validation-for="ImageFile" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Multiple Product Images -->
                        <div class="col-lg-6 col-sm-6 col-12">
                            <div class="form-group">
                                <label asp-for="ImageFiles">Gallery Images</label>
                                <input asp-for="ImageFiles" type="file" multiple class="form-control" />
                                <span asp-validation-for="ImageFiles" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Submit Buttons -->
                        <div class="col-lg-12 mt-3">
                            <button type="submit" class="btn btn-submit me-2">Submit</button>
                            <a asp-action="Index" class="btn btn-cancel">Cancel</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}